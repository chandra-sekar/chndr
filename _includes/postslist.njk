<div class="postlist">
{% for post in postslist %}
  <section class="h-entry postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <div> 
        <a href="{{ post.url | url }}" class="postlist-link p-name">{% if post.data.title %}{{ post.data.title }}{% else %}<div>{{ post.url }}</div>{% endif %}</a>
        {%- if post.data.description -%}
          <p>{{ post.data.description | toHTML | safe }}</p>
        {%- else -%}
          {{ post.templateContent | safe }}
        {%- endif -%}
      </div>
      <time class="postlist-date dt-published" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>

    {% for tag in post.data.tags %}
      {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </section>
{% endfor %}
</div>